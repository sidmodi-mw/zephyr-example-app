{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build",
			"type": "shell",
			"group": {
				"kind": "build",
			},
			"options": {
				"cwd": "${workspaceFolder}/mw-test-application"
			},
			"command": "python3",
			"args": [
				"${workspaceFolder}/mw-test-application/scripts/build_and_flash.py",
				"${input:board}",
				"--pristine",
				"${input:pristine}",
				"--app",
				"app/",
				"--flash",
				"false"
			],
			"problemMatcher": [
				"$gcc"
			]
		},
		{
			"label": "Build and Flash",
			"type": "shell",
			"group": {
				"kind": "build",
			},
			"options": {
				"cwd": "${workspaceFolder}/mw-test-application"
			},
			"command": "python3",
			"args": [
				"${workspaceFolder}/mw-test-application/scripts/build_and_flash.py",
				"${input:hw_board}",
				"--pristine",
				"${input:pristine}",
				"--app",
				"app/"
			],
			"problemMatcher": []
		},
		{
			"label": "Twister Run",
			"type": "shell",
			"group": {
				"kind": "test",
			},
			"linux": {
				"command": "west"
			},
			"options": {
				"cwd": "${workspaceFolder}/mw-test-application"
			},
			"args": [
				"twister",
				"--clobber-output",
				"-p",
				"native_sim",
				"-T",
				"tests"
			],
			"problemMatcher": [
				"$gcc"
			]
		}
	],
	"inputs": [
		{
			"id": "board",
			"type": "pickString",
			"default": "native_sim",
			"description": "See https://docs.zephyrproject.org/latest/boards/index.html",
			"options": [
				"native_sim",
				"nrf52840dk/nrf52840",
				"nucleo_f401re"
			]
		},
		{
			"id": "hw_board",
			"type": "pickString",
			"default": "nrf52840dk/nrf52840",
			"description": "See https://docs.zephyrproject.org/latest/boards/index.html",
			"options": [
				"nrf52840dk/nrf52840",
				"nucleo_f401re"
			]
		},
		{
			"id": "pristine",
			"type": "pickString",
			"description": "Choose when to run a pristine build",
			"default": "auto",
			"options": [
				"auto",
				"always",
				"never"
			]
		},
		{
			"id": "Build configuration",
			"type": "pickString",
			"description": "Choose which configuration to build",
			"default": "prj.conf",
			"options": [
				"prj_debug.conf"
			]
		}
	]
}